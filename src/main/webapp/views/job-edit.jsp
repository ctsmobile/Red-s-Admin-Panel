    <!-- [ Main Content ] start -->
    <div class="pcoded-main-container">
        <div class="pcoded-wrapper">
            <div class="pcoded-content">
                <div class="pcoded-inner-content">
                    <div class="main-body">
                        <div class="page-wrapper">                            
                            <div class="app-container">                                
                                <div class="app-main" id="main">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-12 mb-4">
                                                <div class="d-block d-sm-flex flex-nowrap align-items-center">
                                                    <div class="page-title mb-2 mb-sm-0">
                                                        <h2>Edit Job</h2>
                                                    </div>
                                                    <div class="ml-auto d-flex align-items-center PgRight">
                                                        <div class="TrackingFilter">
                                                            <a href="/redplastering/admin/jobtype" class="btn btn-primary"><i class="bi bi-arrow-left"></i>Back</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="card card-statistics">
                                                    <div class="card-body">
                                                        <div class="SmallSection">
                                                        <input type="text" id="tokenInput" value="${token}" hidden>
                                                            <form action="/redplastering/admin/updateJob/${jobDetail.jobId}">
                                                                <div class="form-group">
                                                                    <label>Trade</label>
                                                                    <input type="text" class="form-control" value="${jobDetail.jobName}" name="jobName" required>
                                                                    <h6 style="color: red" id="message">${errorMessage}</h6>

                                                                </div>
                                                                <div class="form-group">
                                                                    <label>Upload Image</label>
                                                                    <div class="box d-flex w-100%">
                                                                        <input type="text" name="filename" id="filename" value="${jobDetail.filename}" hidden/>
                                                                        <input type="file" name="file-1[]" id="file-1" class="inputfile inputfile-1"
                                                                            />
                                                                        <label for="file-1"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                                                                <path
                                                                                    d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" />
                                                                            </svg> <span>Choose a file&hellip;</span></label>
                                                                            <div class="UploadPic w-50 text-end"><img src="${jobDetail.imageName}" id="uploadedImage" alt=""></div>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group text-center">
                                                                    <button type="send" class="btn btn-primary">Update <i class="bi bi-send"></i></button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Content end -->

<script type="text/javascript">
    document.querySelector("#file-1").addEventListener("change", (event) => {
        const files = event.target.files;
        var filename = document.getElementById("filename");
        var uploadedImage = document.getElementById("uploadedImage");
        var token = document.getElementById("tokenInput").value;
        document.getElementById("button").disabled = true;
        if (files[0]) {
            uploadedImage.src = URL.createObjectURL(files[0]);
            const formData = new FormData();
                formData.append("file", files[0]);
            $.ajax({
              				url : "http://54.82.200.45:8082/api/v1/admin/uploadImage/",
              				type : "post",
              				data : formData,
              				processData : false,
              				contentType: false,
              				headers : {
              				'token':token
              				},
              				error: function(error){
              				    console.log(error);
              				},
              				success : function(data) {
                                filename.value = data.message;
                                document.getElementById("button").disabled = false;
              				}
              			});
          }

        console.log("Uploading file");
      });

      window.onload = function() {
          			$('#message').fadeOut(3000);

          		}
    </script>
